<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="product"
            type="com.example.repaitshopapplication.data.Product" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/productItemView"
        android:layout_width="match_parent"
        android:clickable="true"
        android:background="@drawable/rectangle_shape"
        android:elevation="5dp"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:focusable="true">

        <TextView
            android:id="@+id/nameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{product.name}"
            android:textStyle="bold"
            android:textColor="@color/purple_700"
            android:textAlignment="textEnd"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/numberTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/purple_700"
            android:text="@{product.number}"
            android:textAlignment="textEnd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/nameTV" />

        <TextView
            android:id="@+id/deliverDateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@{product.date.date}"
            android:textColor="@color/purple_500"
            app:layout_constraintBottom_toBottomOf="@+id/dateTV"
            app:layout_constraintStart_toEndOf="@+id/dateTV"
            app:layout_constraintTop_toBottomOf="@+id/nameTV" />

        <TextView
            android:id="@+id/deliverTimeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/purple_500"
            android:text="@{product.time.time}"
            app:layout_constraintBottom_toBottomOf="@+id/dateTV"
            app:layout_constraintStart_toEndOf="@+id/deliverDateTV"
            app:layout_constraintTop_toBottomOf="@+id/nameTV" />

        <TextView
            android:id="@+id/dateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تاریخ:"
            android:textColor="@color/purple_200"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nameTV" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>